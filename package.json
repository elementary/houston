{
  "name": "@elementaryos/houston",
  "version": "2.0.0-alpha.33",
  "description": "Backend to AppCenter",
  "main": "dist/app.js",
  "repository": "https://github.com/elementary/houston",
  "author": "elementary (https://elementary.io)",
  "license": "MIT",
  "engines": {
    "node": ">= 8.0.0"
  },
  "bin": {
    "houston": "dest/bin.js"
  },
  "scripts": {
    "start": "node dest/bin.js",
    "build": "gulp --gulpfile 'build/gulpfile.ts' build",
    "build:watch": "gulp --gulpfile 'build/gulpfile.ts' watch",
    "test": "jest --no-cache",
    "test:unit": "jest --no-cache .spec.ts",
    "test:e2e": "jest --no-cache .e2e.ts",
    "test:watch": "jest --no-cache --watch .spec.ts",
    "coverage": "jest --no-cache --coverage",
    "ci": "jest --no-cache --coverage --verbose --ci --runInBand false -w 2",
    "lint": "tslint --project 'tsconfig.json'"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.5",
    "@fortawesome/fontawesome-free-brands": "^5.0.10",
    "@fortawesome/fontawesome-free-solid": "^5.0.10",
    "@fortawesome/vue-fontawesome": "0.0.22",
    "cheerio": "^1.0.0-rc.2",
    "dockerode": "^2.5.5",
    "ejs": "^2.5.9",
    "eventemitter2": "^5.0.1",
    "faker": "^4.1.0",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "ini": "^1.3.5",
    "inversify": "^4.13.0",
    "knex": "^0.14.6",
    "koa": "^2.5.0",
    "koa-router": "^7.3.0",
    "koa-static": "^4.0.2",
    "lodash": "^4.17.4",
    "markdown-it": "^8.4.1",
    "nodegit": "^0.22.0",
    "reflect-metadata": "^0.1.12",
    "sanitize-html": "^1.18.2",
    "superagent": "^3.8.2",
    "uuid": "^3.2.1",
    "yargs": "^11.0.0"
  },
  "optionalDependencies": {
    "bull": "^3.3.10",
    "raven": "^2.0.1"
  },
  "devDependencies": {
    "@types/bull": "^3.3.10",
    "@types/faker": "^4.1.2",
    "@types/jest": "^22.2.3",
    "@types/knex": "0.14.12",
    "@types/koa-router": "^7.0.27",
    "@types/node": "^9.6.6",
    "gulp": "^4.0.0",
    "gulp-sourcemaps": "^2.6.3",
    "gulp-typescript": "^4.0.2",
    "jest": "^22.4.3",
    "nock": "^9.2.5",
    "sinon": "^4.5.0",
    "sqlite3": "^4.0.0",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-consistent-codestyle": "^1.13.0",
    "tslint-jsdoc-rules": "^0.1.2",
    "tslint-microsoft-contrib": "^5.0.3",
    "typescript": "^2.8.3"
  },
  "files": [
    "dest/"
  ],
  "publichConfig": {
    "access": "public"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/cli/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/cli/",
      "/.*\\.d\\.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupFiles": [
      "<rootDir>/src/bootstrap.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/bootstrap.js",
    "testRegex": "\\.(spec|e2e)\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
