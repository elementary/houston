extends /layout/main

block body
  section.hero.dark
    h1 AppHub: the new Wild West
    h4 An open, pay-what-you-want app store for indie developers
    if user
      a(href="/dashboard").button.suggested-action Welcome back #{user.username}
    else
      a(href='/dashboard').button.suggested-action#github-import Log In with GitHub 
        i.fa.fa-github
  section.row
    div.column.third
      a(href="https://elementary.io/docs/code", target="_blank")
        i.fa.fa-book
        h3 Documentation
        p Get a basic app running, built, and ready for distribution with our Getting Started guide.
    div.column.third
      a(href="https://elementary.io/docs/human-interface-guidelines", target="_blank")
        i.fa.fa-pencil
        h3 Design
        p Learn about the design principles that make up apps on elementary OS.
    div.column.third
      a(href="https://plus.google.com/u/1/communities/104613975513761463450/stream/8b081f64-7175-4338-a052-28c56fd45d53", target="_blank")
        i.fa.fa-comments-o
        h3 Community
        p Trade ideas and get help from other developers.
