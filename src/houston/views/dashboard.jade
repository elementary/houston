extends /layout/main

block head
  link(rel="stylesheet", type="text/css", media="all", href="/styles/dashboard.css")

block body
  if projects.length === 0
    div.row: div.column.alert
      h3 No elementary apps found!
      p An 
        code .apphub
        |  file in the root of the repo is how Houston knows which apps to look at.
  else
    each project in projects
      div.repo-wrap: div.repo
        div
          if project.package.icon != null
            img(src="data:image/svg+xml;base64," + project.package.icon).app-icon
          else
            img(src="/images/application-default-icon.png").app-icon
          div
            p= project.name
            p.subtext: a(href="https://github.com/" + project.github.fullName)= project.github.fullName
        div.right
          include /partials/status
  if reviews.length > 0
    div.row
      h3 Reviews
      h4 #{helper.lang.s('review is', reviews)} pending
      each cycle in reviews
        div.repo
          div.right
            include /partials/review
          div.description
            p #{cycle.name} @ #{cycle.version}
